<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/top_linear_layout">
        <LinearLayout
            android:id="@+id/utility_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_alignParentLeft="true"
                android:background="@null"
                android:src="@drawable/search"
                android:focusable="true"></ImageButton>

            <EditText
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:hint="Search for movies..."/>
            <view
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></view>

            <ImageButton
                android:id="@+id/btn4"
                android:layout_width="80px"
                android:layout_height="80px"
                android:background="@null"

                android:src="@drawable/about"></ImageButton>
            <ImageButton
                android:id="@+id/btn3"
                android:layout_width="80px"
                android:layout_height="80px"
                android:background="@null"
                android:layout_gravity="right"
                android:src="@drawable/mail"></ImageButton>
            <ImageButton
                android:id="@+id/btn2"
                android:layout_width="80px"
                android:layout_height="80px"
                android:background="@null"
                android:src="@drawable/notifications"></ImageButton>
            <TextView
                android:id="@+id/usename"
                android:layout_width="wrap_content"
                android:layout_height="80px"
                android:textColor="#FFFFFF"
                android:textSize="40px"
                android:layout_marginTop="10px"
                android:text="Sofie Turner" />
            <ImageButton
                android:id="@+id/btn1"
                android:layout_width="80px"
                android:layout_height="80px"
                android:background="@drawable/img_background"
                android:layout_alignParentRight="true"
                android:src="@drawable/avatar"></ImageButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="Home"
                android:textSize="30px"/>

            <Button
                android:id="@+id/tvshow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="TV Shows"
                android:textSize="30px"/>
            <Button
                android:id="@+id/whatchlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="Whatchlist "
                android:textSize="30px"/>
            <Button
                android:id="@+id/movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="Movies "
                android:textSize="30px"/>
            <Button
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="Settings "
                android:textSize="30px"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_linear_layout" />
</RelativeLayout>